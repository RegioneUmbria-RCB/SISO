 <servlet>
  <servlet-name>Faces Servlet</servlet-name>
  <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Faces Servlet</servlet-name>
  <url-pattern>*.faces</url-pattern>
 </servlet-mapping>
 <session-config>
  <session-timeout>60</session-timeout>
 </session-config>
 <welcome-file-list>
  <welcome-file>/jsp/index.jsp</welcome-file>
 </welcome-file-list>
 <error-page>
  <error-code>404</error-code>
  <location>/jsp/protected/errori/error.html</location>
 </error-page>
 <error-page>
  <exception-type>java.lang.Exception</exception-type>
  <location>/jsp/protected/errori/error.html</location>
 </error-page>
 <!-- Sample Security Constraint -->
 <security-constraint>
  <display-name>SEGRETARIATO SOCIALE Security</display-name>
  <web-resource-collection>
   <web-resource-name>Secure resource</web-resource-name>
   <url-pattern>/jsp/protected/*</url-pattern>
  </web-resource-collection>
  <auth-constraint>
   <role-name>CarSociale</role-name>
  </auth-constraint>
 </security-constraint>
 <login-config>
  <auth-method>FORM</auth-method>
  <form-login-config>
   <form-login-page>/jsp/public.faces</form-login-page>
   <form-error-page>/jsp/public.faces?retry=true</form-error-page>
  </form-login-config>
 </login-config>
 <security-role>
  <role-name>CarSociale</role-name>
 </security-role>
</web-app>
